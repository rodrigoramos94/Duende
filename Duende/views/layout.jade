doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title} - CloverElf
    link(rel='shotcut icon' href='../images/duende-icon.ico')
    link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
    script(src='/javascripts/modernizr-2.6.2.js')
    block head
  body
    #navbar.navbar.navbar-inverse.navbar-fixed-top
      #navbar-container.container-fluid
        .navbar-header
          a#brand-logo.navbar-brand(href='/home')
            img.img-responsive(src='../images/trebol4.png' width='40px' heigth='40px')
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar  
            span.icon-bar 
        .navbar-collapse.collapse
            ul.nav.navbar-nav
                if title == "Home"
                    li.active
                        a(href='/home') Home
                else
                    li
                        a(href='/home') Home
                if title == "Panel de Mercados"
                    li.active
                        a(href='/markets') Mercados
                else
                    li
                        a(href='/markets') Mercados 
                if title == "Panel de Operaciones"
                    li.active
                        a(href='/trades') Operaciones
                else
                    li
                        a(href='/trades') Operaciones
                if title == "About"
                    li.active
                        a(href='/about') Sobre Nosotros
                else
                    li
                        a(href='/about') Sobre Nosotros
                if title == "Contact"
                    li.active
                        a(href='/contact') Contacto
                else
                    li
                        a(href='/contact') Contacto
            hr.visible-xs
            ul.nav.navbar-nav.navbar-right
                li
                    a(href='/') 
                        span.glyphicon.glyphicon-user
                        |   Bienvenido, #{username}
                li.dropdown
                    a.dropdown-toggle(data-toggle="dropdown" href="#")
                        span.glyphicon.glyphicon-cog
                        span.caret
                    ul.dropdown-menu
                      li
                        a(href="#") Page 1-1
                      li
                        a(href="#") Page 1-2
                      li
                        a(href="#") Page 1-3 
                        
    #body-container.container.body-content
      block content
      br
      hr.divisoria
      footer
        p &copy; #{year} - Clover Elf Trading

    script(src='/javascripts/jquery-1.10.2.js')
    script(src='/javascripts/bootstrap.js')
    script(src='/javascripts/respond.js')

    block scripts