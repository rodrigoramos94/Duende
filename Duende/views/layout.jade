doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title} - CloverElf
    link(rel='shotcut icon' href='../images/duende-icon.ico')
    link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
    script(src='/javascripts/modernizr-2.6.2.js')
    block head
  body
    .navbar.navbar-inverse.navbar-static-top
      .container
        .navbar-header
          a.navbar-brand(href='/home') Clover Elf
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar  
            span.icon-bar 
        .navbar-collapse.collapse
            ul.nav.navbar-nav
                li.active
                    a(href='/markets') Mercados
                li
                    a(href='/trades') Operaciones
                li
                    a(href='/about') Sobre Nosotros
                li
                    a(href='/contact') Contacto
            ul.nav.navbar-nav.navbar-right
                li
                    a(href='/') 
                        span.glyphicon.glyphicon-user
                        |   Bienevenido, #{username}
                li.dropdown
                    a.dropdown-toggle(data-toggle="dropdown" href="#")
                        span.glyphicon.glyphicon-cog
                        span.caret
                    ul.dropdown-menu
                      li
                        a(href="#") Page 1-1
                      li
                        a(href="#") Page 1-2
                      li
                        a(href="#") Page 1-3 
                        
    .container.body-content
      block content
      hr
      footer
        p &copy; #{year} - My Express Application

    script(src='/javascripts/jquery-1.10.2.js')
    script(src='/javascripts/bootstrap.js')
    script(src='/javascripts/respond.js')

    block scripts